<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.HomeFragment"
    android:layout_marginTop="75dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/greeting_manager_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hola, Diego !"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Empieza a administrar tus departamentos"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agrega un departamento"
            app:cornerRadius="16dp"
            android:layout_marginHorizontal="40dp"
            android:layout_marginVertical="20dp"
            android:id="@+id/addFlatButton"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_flat"
            android:id="@+id/recyclerFlats"/>
    </LinearLayout>




</FrameLayout>