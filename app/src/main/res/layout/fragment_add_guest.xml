<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="15dp">


    <TextView
        android:id="@+id/txtEditInquilino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Agregar un inquilino "/>
    <TextView
        android:id="@+id/txtEditInquilinoName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/txtEditInquilino"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtFlat_id_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="15dp"
        android:textColor="#4C4C4C"
        app:layout_constraintTop_toBottomOf="@id/txtEditInquilino"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/txtFlat_id_add_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#4C4C4C"
        android:drawableRight="@drawable/ic_person"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txtFlat_id_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:id="@+id/txtFlat_id_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Correo"
        android:textSize="15dp"
        android:textColor="#4C4C4C"
        app:layout_constraintTop_toBottomOf="@id/txtFlat_id_add_name"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/txtFlat_id_add_email"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#4C4C4C"
        android:drawableRight="@drawable/baseline_email_24"
        android:drawableTint="@color/black"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txtFlat_id_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <TextView
        android:id="@+id/txtFlat_id_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ConstraseÃ±a"
        android:textSize="15dp"
        android:textColor="#4C4C4C"
        app:layout_constraintTop_toBottomOf="@id/txtFlat_id_add_email"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/txtFlat_id_add_password"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="#4C4C4C"
        android:drawableRight="@drawable/baseline_vpn_key_24"
        android:drawableTint="@color/black"
        android:backgroundTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/txtFlat_id_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/txtFlat_id_add_password"
        app:layout_constraintStart_toStartOf="parent">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/accept_add_guest"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar"
            app:cornerRadius="30dp"
            app:strokeColor="@color/depa_def"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"/>
        <com.google.android.material.button.MaterialButton
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            app:cornerRadius="30dp"
            app:strokeColor="@color/depa_def"
            android:layout_weight="1"
            android:layout_marginHorizontal="10dp"
            android:id="@+id/cancel_add_guest"/>
    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>
